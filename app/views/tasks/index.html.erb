<% provide(:header_title, "課題一覧") %>
<div class="content">
  <% if @tasks.present? %>
  <table>
    <thead>
      <tr>
        <th colspan="3">タイトル</th>
        <th colspan="3">内容</th>
        <th colspan="3">期限</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td class="task_title">
            <%= task.title %>
          </td>
          <td class="content">
            <%= task.content %>
          </td>
          <td class="end_tiem">
            <%= task.end_time %>
          </td>
          <td><%= link_to '詳細', task%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
  <div class="col-sm-12">
    <p>課題はありません。</p>
  </div>
  <% end %>
</div>

<br>

<%= link_to '新規登録', new_task_path, class: "btn btn-primary" %>
