<% provide(:header_title, "課題一覧") %>
<div class="content">
  <% if @tasks.present? %>
  <table>
    <thead>
      <tr>
        <th colspan="3">タイトル</th>
        <th colspan="3">内容</th>
        <th colspan="3">期限</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.content %></td>
          <td><%= task.end_time %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
  課題はありません
  <% end %>
</div>

<br>

<%= link_to '新規登録', new_task_path, class: "btn btn-primary" %>
