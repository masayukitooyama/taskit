<% provide(:header_title, "課題一覧") %>

  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.end_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>

