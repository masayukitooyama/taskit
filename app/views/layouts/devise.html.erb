<!DOCTYPE html>
<html>
  <head>
    <title>課題管理システムTaskit</title>
    <%= favicon_link_tag 'favicon.ico' %>
    <!-- CSS -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" type="text/css"/>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet">
    <%= stylesheet_link_tag    'bootstrap.min', media: 'all' %>
    <%= stylesheet_link_tag    'daterangepicker-bs3.css', media: 'all' %>
    <%= stylesheet_link_tag    'datepicker3.css', media: 'all' %>
    <%= stylesheet_link_tag    'select2.css', media: 'all' %>
    <%= stylesheet_link_tag    'fullcalendar.css', media: 'all' %>
    <%= stylesheet_link_tag    'fullcalendar.print.css', media: 'all' %>
    <%= stylesheet_link_tag    'jquery.dataTables.min.css', media: 'all' %>
    <%= stylesheet_link_tag    'ark.css', media: 'all' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= csrf_meta_tags %>
  </head>

  <body class="cover">
    <div class="login-wrap">
      <div class="panel">
        <div class="brand">
          <%= link_to root_path do %>
            <%= image_tag 'logo.png', size: "100x100" %>
          <% end %>
        </div>
        <div class="panel-heading mt15">
          <h3 class="panel-title"><%= yield(:panel_title) %></h3>
        </div>
        <div class="panel-body">
          <%= yield %>
        </div>
      </div>
    </div>
  <!-- END: BODY -->
  </div>
</body>
</html>
